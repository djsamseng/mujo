<mujoco>
    <compiler angle="radian" />
    <worldbody>
        <body name="box" pos="0 0 0.2">
            <geom size="0.15 0.15 0.15" type="box" mass="1"/>
            <joint axis="1 0 0" name="box:x" type="slide"/>
            <joint axis="0 1 0" name="box:y" type="slide"/>
        </body>
        <!-- body moves together -->
        <body name="shapes" pos="0.5 0.5 0.2" >
            <geom type="ellipsoid" pos="0 0 0" mass="100" size="0.15 0.15 0.15"/>
            <geom type="sphere" pos="0.5 0.5 0" mass="100" size="0.15 0.15 0.15"/>
            <geom type="cylinder" pos="1 1 0" mass="0.1" size="0.15 0.15 0.15"/>
            <geom type="box" pos="1.5 1.5 0" mass="0.1" size="0.15 0.15 0.15"/>
            <!-- joints allow the body to move. Without them the body won't move -->
            <joint axis="1 0 0" name="shapes:x" type="slide"/>
            <joint axis="0 1 0" name="shapes:y" type="slide"/>
        </body>
        <body name="floor" pos="0 0 0.025">
            <geom size="1.0 1.0 0.02" rgba="0 1 0 1" type="box"/>
        </body>
        <camera name="camera_left" pos="-0.1 -1.2 1" fovy="90" axisangle="1 0 0 0.9"/>
        <camera name="camera_right" pos="0.1 -1.2 1" fovy="90" axisangle="1 0 0 0.9"/>
    </worldbody>
    <actuator>
        <general name="a" joint="box:x" ctrlrange="-10 10" />
        <general name="b" joint="box:y" ctrlrange="-10 10" />
    </actuator>
</mujoco>